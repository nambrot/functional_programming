package recfun

object Main {
  def main(args: Array[String]) {
    println("Pascal's Triangle")
    for (row <- 0 to 10) {
      for (col <- 0 to row)
        print(pascal(col, row) + " ")
      println()
    }
  }

  /**
   * Exercise 1
   */
    def pascal(c: Int, r: Int): Int = {
      def row(rowNumber: Int): List[Int] = {
        rowNumber match {
          case 0 => List(1)
          case 1 => List(1, 1)
          case _ => {
            val prevList = row(rowNumber - 1)
            ((0 :: prevList) zip (prevList :+ 0)) map { case(a,b) => a + b }
          }
        }
      }
      row(r)(c)
    }
  
